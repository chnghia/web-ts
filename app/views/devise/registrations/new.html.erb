<h1>Time attendance</h1>
<div class="block" id="block-signup">
<h2>Sign up</h2>
  <div class="content">
  <div class="flash">
      <%#= devise_error_messages! %>
      <% flash.each do |type, message| %>
        <div class="message <%= type %>">
          <p><%= message %></p>
        </div>
      <% end %> 
  </div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div class="group wat-cf">
    <div class="left"><%= f.label :email, :class => "label right" %></div>
    <div class="right"><%= f.text_field :email, :class => "text_field" %></div>
    <span class="description">Ex. test@example.com</span>
  </div>
  <div class="group wat-cf">
    <div class="left"><%= f.label :password, :class => "label right" %></div>
    <div class="right"><%= f.password_field :password, :class => "text_field" %></div>
    <span class="description">must be at least 6 characters</span>
  </div>

  <div class="group wat-cf">
    <div class="left"><%= f.label :password_confirmation, "Re-enter Password", :class => "label right" %></div>
    <div class="right"><%= f.password_field :password_confirmation, :class => "text_field" %></div>
  </div>

  <div class="group wat-cf">
    <div class="right">
      <button class='button' type='submit'>
        <%= image_tag "/images/web-app-theme/icons/tick.png" %>
        Sign up
      </button>
    </div>
  </div>
  <br/>
  <div class="group wat-cf">
    <div class="right">
    <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
