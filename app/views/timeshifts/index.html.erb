<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", timeshifts_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_timeshift_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Employees</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
          <th>Name</th>
          <th>Gender</th>
          <th>Department</th>
          <th>Enroll Number</th>
          <!--th>
            <%= t("activerecord.attributes.timeshift._type", :default => t("activerecord.labels._type", :default => "_type")) %>
          </th-->
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @timeshifts.each do |timeshift| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= timeshift.id %>
          </td>
          <td>
            <%= timeshift.name %>
          </td>
          <td>
            <%= timeshift.gender %>
          </td>
          <td>
            <%= timeshift.timeshift %>
          </td>
          <td>
            <%= timeshift.enroll_number %>
          </td>
          <!--td>
            <%= link_to timeshift._type, timeshift_path(timeshift) %>
          </td-->
          <td>
            <%= timeshift.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", timeshift_path(timeshift) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_timeshift_path(timeshift) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", timeshift_path(timeshift), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= paginate @timeshifts  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
