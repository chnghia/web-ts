<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", "/settings/timeshifts"  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_timeshift_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", timeshift_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.timeshift._type", :default => t("activerecord.labels._type", :default => " type")) %>:</b>
          <%= @timeshift._type %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.timeshift._id", :default => t("activerecord.labels._id", :default => "")) %>:</b>
          <%= @timeshift._id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.timeshift.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @timeshift.name %>
        </p>

      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_timeshift_path(@timeshift), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), timeshift_path(@timeshift), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
