<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", employees_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_employee_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Employees</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
          <th>Name</th>
          <th>Gender</th>
          <th>Department</th>
          <th>Enroll Number</th>
          <!--th>
            <%= t("activerecord.attributes.employee._type", :default => t("activerecord.labels._type", :default => "_type")) %>
          </th-->
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @employees.each do |employee| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= employee.id %>
          </td>
          <td>
            <%= employee.name %>
          </td>
          <td>
            <%= employee.gender %>
          </td>
          <td>
            <%= employee.department %>
          </td>
          <td>
            <%= employee.enroll_number %>
          </td>
          <!--td>
            <%= link_to employee._type, employee_path(employee) %>
          </td-->
          <td>
            <%= employee.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", employee_path(employee) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_employee_path(employee) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", employee_path(employee), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= paginate @employees  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
